
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/img/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/LogIn/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/LogIn/main.css">
    <style>
        .blur {
            /* overflow: hidden; */
            -webkit-filter: blur(13px);
            -moz-filter: blur(13px);
            -o-filter: blur(13px);
            -ms-filter: blur(13px);
            filter: blur(13px);
        }
        .LoaderStyle {
            margin: 0px;
            padding: 0px;
            position: fixed;
            right: -52%;
            top: 40%;
            width: 100%;
            height: 100%;
            z-index: 30001;
            opacity: .8;
            filter: alpha(opacity=70);
        }
    </style>
    <!--===============================================================================================-->
    <script src="~/Content/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/AngularModules/angular.js"></script>
    <script src="~/Content/AngularModules/Login.js"></script>
    <script src="~/Content/AngularModules/ui-select/angular-sanitize.js"></script>

    <script src="~/Content/AngularModules/angular-animate.js"></script>
    <script src="~/Content/AngularModules/angular-touch.js"></script>
    <link href="~/Content/AngularModules/Toastr/toastr.css" rel="stylesheet" />
    <script src="~/Content/AngularModules/Toastr/toastr.js"></script>
    <script type="text/javascript">
        window.MyApp = {};
        MyApp.rootPath = '@Url.Content("~/")';
    </script>
</head>
<body>

<div  ng-app="myApp" ng-controller="myCtrl">
    <div class="loader ng-cloak LoaderStyle" data-loading>
        <img src="~/Content/img/loader.gif" width="100px;" height="100px;" style="top: 50%; left: 50%;" />
    </div>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-form-title" style="background-image: url(../Content/img/PAsiaBanner_LOGIN.jpg);">
                    <span class="login100-form-title-1">
                        Sign In
                    </span>
                </div>
                <div ng-form="frmLogin" class="login100-form validate-form">

                    <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
                        <span class="label-input100">Username</span>
                        <input class="input100" type="text" name="username" placeholder="Enter username" ng-model="Username">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
                        <span class="label-input100">Password</span>
                        <input class="input100" type="password" name="pass" placeholder="Enter password" ng-model="Password" ng-keydown="$event.keyCode === 13 && LoginSystem()">
                        <span class="focus-input100"></span>
                    </div>

                    @*<div class="flex-sb-m w-full p-b-30">
                                <div class="contact100-form-checkbox">
                                    <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                                    <label class="label-checkbox100" for="ckb1">
                                        Remember me
                                    </label>
                                </div>

                                <div>
                                    <a href="#" class="txt1">
                                        Forgot Password?
                                    </a>
                                </div>
                            </div>*@

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" ng-click="LoginSystem()">
                            Login
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>






</body>
</html>

