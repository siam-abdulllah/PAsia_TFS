@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Reports/NgCode/frmZoneWiseSalesProductAchievement.js"></script>
<div ng-app="myApp" ng-controller="myCtrl">
    <div class="form-horizontal" ng-form="frmZoneWiseSalesProductAchievement">
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <div class="form-group">
                                <div class="col-md-5">
                                    <h2 class="box-title">
                                        <strong>{{FormTitle}}</strong>
                                    </h2>
                                </div>
                            </div>
                            <br />
                        </div>
                        <div class="box-body">
                            <form role="form">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-1">
                                        </div>
                                        <div class="col-md-1">
                                            <label class="control-label required">From</label>
                                        </div>
                                        <div class="col-md-2">
                                            <input type="text" class="form-control pull-right datepicker" ng-model="FromDate" required readonly>
                                        </div>
                                        <div class="col-md-1">
                                            <label class="control-label required">To</label>
                                        </div>
                                        <div class="col-md-2">
                                            <input type="text" class="form-control pull-right datepicker" ng-model="ToDate" required readonly>
                                        </div>
                                        <div class="col-md-4" style="padding-top: 3px;">

                                            <button type="button" class="btn btn-embossed btn-success" ng-click="GetZoneWiseSalesAchievement()" ng-class="{'btn-transparent': frmZoneWiseSalesProductAchievement.$invalid}" ng-disabled="frmZoneWiseSalesProductAchievement.$invalid"><i class="fa fa-search"></i>Search</button>
                                            <button type="button" class="btn btn-embossed btn-danger" ng-click="Reset()"><i class="fa fa-refresh"></i>&nbsp Reset</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    @*<div class="row">
                        <fieldset>
                            <legend>Zone Wise Sales (Value)</legend>
                            <div id="gridZWiseSalesAchValue" ui-grid="gridZWiseSalesAchOptionsValue" class="grid" style="height: 200px; width: 100%;" ui-grid-auto-resize ui-grid-resize-columns ui-grid-grouping ui-grid-exporter></div>

                        </fieldset>
                        </div>*@
                    <br/>
                    <div class="row">
                        <fieldset>
                            <legend>Zone Wise Sales (Product)</legend>
                            <div id="gridZWiseSalesAchProduct" ui-grid="gridZWiseSalesAchOptionsProduct" class="grid" style="height: 250px; width: 100%;" ui-grid-auto-resize ui-grid-resize-columns ui-grid-grouping ui-grid-exporter></div>
                        </fieldset>
                        </div>
                </div>
            </div>
        </section>
    </div>
</div>
<script>
    $('.datepicker').datepicker({
        todayBtn: "linked",
        autoclose: true,
        todayHighlight: true,
        format: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true
        
    })
</script>

