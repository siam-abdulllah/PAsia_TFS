
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .row {
        margin: 1%;
    }

    .form-group {
        padding: 0 1% 0 1%;
        margin-bottom: 0.5%;
        font-size: 11px;
    }

    .select2-container .select2-choice {
        height: 26px;
        line-height: 1;
    }

    .form-control {
        /*width: 100%;*/
        height: 20%;
        font-size: 11px;
    }

    .datepicker {
        padding: 6px 12px;
        -webkit-border-radius: 0;
        -moz-border-radius: 0;
        border-radius: 0;
    }
    /*.modal {
        padding-right: 30%;
    }*/
    #ExpReqApproveMstModal > .modal-dialog {
        margin-left: 2%;
    }
        /*.modal-content {*/
        #ExpReqApproveMstModal > .modal-dialog > .modal-content {
            width: 145%;
            /*height: 453px;*/
        }
</style>
<script src="~/Areas/Requisition/NgCode/frmExpIndividualRequisition.js"></script>
<div ng-app="myApp" ng-controller="ExpIndividualRequisitionCtrl">
    <div class="loader LoaderStyle" ng-cloak data-loading>
        <img src="~/Content/img/loader.gif" width="100" height="100" style="top: 50%; left: 50%;" />
    </div>
    <div class="form-horizontal" ng-form="frmExpIndividualRequisition">
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <div class="form-group">
                                <div class="col-md-5">
                                    <h2 class="box-title">
                                        <strong ng-cloak>{{FormTitle}}</strong>
                                    </h2>
                                </div>
                                <div class="col-md-7">
                                    <div class="text-right  m-t-10">
                                        <button type="button" class="btn btn-embossed btn-danger" ng-click="Reset()"><i class="fa fa-refresh"></i>&nbsp Reset</button>
                                        <button type="button" class="btn btn-embossed btn-success" ng-click="GetExpApprovedReqMstList()" ng-class="{'btn-transparent': frmExpIndividualRequisition.$invalid}" ng-disabled="frmExpIndividualRequisition.$invalid"><i class="fa fa-search"></i>&nbspSearch</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-1">
                                    <label class="control-label">From Date</label>
                                </div>
                                <div class="col-md-3">
                                    <input type="text" class="form-control datepicker clickable" placeholder="Calender" id="FromDate" name="FromDate" ng-model="FromDate" readonly required>
                                </div>
                                <div class="col-md-1">
                                    <label class="control-label">To Date</label>
                                </div>
                                <div class="col-md-3">
                                    <input type="text" class="form-control datepicker clickable" placeholder="Calender" id="ToDate" name="ToDate" ng-model="ToDate" readonly required>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div id="gridRMst" ui-grid="gridExpReqApproveMstOptions" class="grid" style="height: 200px; width: 100%;" ui-grid-auto-resize ui-grid-resize-columns ui-grid-exporter></div>
                            </div>
                            <fieldset>
                                <legend class="collapsable clickable"><i class="fa fa-plus-square-o"></i>&nbsp;&nbsp;Access</legend>
                                <div class="row">
                                    <table class="table table-borderless" style="margin-bottom: 5px; background-color:ActiveCaption;">
                                        <tbody>
                                            <tr>
                                                <th>Access</th>
                                                <th>Name</th>
                                                <th>Designation</th>
                                                <th>Date</th>
                                            </tr>
                                            <tr ng-show="ApprovedDate">
                                                <td>Approved By</td>
                                                <td>{{ApprovedName}}</td>
                                                <td>{{ApprovedDesig}}</td>
                                                <td>{{ApprovedDate}}</td>
                                            </tr>
                                            <tr ng-show="RecommendedDate">
                                                <td>Recommended By</td>
                                                <td>{{RecommendedName}}</td>
                                                <td>{{RecommendedDesig}}</td>
                                                <td>{{RecommendedDate}}</td>
                                            </tr>
                                            <tr ng-show="VerifiedDate">
                                                <td>Verified By</td>
                                                <td>{{VerifiedName}}</td>
                                                <td>{{VerifiedDesig}}</td>
                                                <td>{{VerifiedDate}}</td>
                                            </tr>
                                            <tr ng-show="CheckedDate">
                                                <td>Checked By</td>
                                                <td>{{CheckedName}}</td>
                                                <td>{{CheckedDesig}}</td>
                                                <td>{{CheckedDate}}</td>
                                            </tr>
                                            <tr ng-show="PrepareDate">
                                                <td>Prepare By</td>
                                                <td>{{PrepareName}}</td>
                                                <td>{{PrepareDesig}}</td>
                                                <td>{{PrepareDate}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </fieldset>
                        </div>
                        <div class="row">
                            <div id="gridPDtl" ui-grid="gridExpReqApproveDtlOptions" class="grid" style="height: 200px; width: 100%;" ui-grid-auto-resize ui-grid-resize-columns ui-grid-exporter></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<script>
    $('.datepicker').datepicker({
        todayBtn: "linked",
        autoclose: true,
        orientation: 'bottom',
        todayHighlight: true,
        format: 'dd/mm/yyyy',
        changeMonth: true,
        changeYear: true
    })
</script>